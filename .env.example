# Frontend (Vite) .env
# Copy to .env.local for local dev.

# OIDC
# Issuer should match the OIDC discovery issuer (from the IdP's OIDC discovery document).
VITE_OIDC_ISSUER_URL=""
VITE_OIDC_CLIENT_ID=""
# Optional
VITE_OIDC_AUDIENCE=""
VITE_OIDC_SCOPE="openid profile email"

# Silent renewal (iframe) support
# This URL must be on the SAME ORIGIN as the app.
# Tip: you can point it to the same SPA with a flag so it runs signinSilentCallback():
#   https://app.example.com/?silent-renew=1
VITE_OIDC_SILENT_REDIRECT_URI=""

# Optional: renew this many seconds before expiry (default 30)
VITE_OIDC_RENEW_SKEW_SECONDS="30"
